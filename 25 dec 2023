1 to N Without Loop

vector<int> printNos(int n) {
    // Write Your Code Here
 // Base case: If n is 1, return a vector containing only 1
    if (n == 1) {
        return {1};
    }

    // // Recursive case: Call printNos with n-1 and append n to the result
    // vector<int> result = printNos(n - 1);
    // result.push_back(n);

    // return result;

    vector<int> result=printNos(n-1);
    result.push_back(n);
    return result;
}


