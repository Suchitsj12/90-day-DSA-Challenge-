 Check Sorted Array

int isSorted(int n, vector<int> a) {
    // Write your code here.

    // int a[0];
    for(int i=0;i<n;i++){
        if(a[i]>=a[i-1]){
            // return 1;
        }
        else{
            return 0;
        }
    }
    return 1;
}


